<div class="chat-button-wrapper">
    <div class="chat-toggle-btn" onclick="toggleChat()"><i class="bi bi-chat-heart"></i></div>

    <div class="chat-popup" id="chatPopup">
        <div class="chat-header">💬Latest Comments</div>
        <div class="chat-body">
            @foreach (var comment in ViewBag.LatestComments ?? new List<dynamic>())
            {
                <div class="chat-message">
                    <strong>@comment.Name:</strong> @comment.Message
                </div>
            }
        </div>
        <div class="chat-footer">
            <a href="/Comment" class="see-more-link">See more →</a>
        </div>
    </div>
</div>

<script>
    function toggleChat() {
        const popup = document.getElementById("chatPopup");
        popup.classList.toggle("active");
    }
</script>